<div data-controller="hello"
     data-action="dragAndDroppable.load->hello#printEvent
                  dragAndDroppable.mouseenter->hello#printEvent
                  dragAndDroppable.grab->hello#printEvent
                  dragAndDroppable.snapToNewDropzone->hello#printEvent
                  dragAndDroppable.ungrab->hello#printEvent
                  dragAndDroppable.enddragging->hello#printEvent
                  dragAndDroppable.trash->hello#printEvent
                  step.snap->hello#printEvent
                  step.drop->hello#printEvent">
  <circuit-editor data-hello-target="editor">
    <div class="flex flex-row space-x-2 fixed top-0 left-0 mt-8 ml-8 px-4 py-5 bg-white rounded-md border-2 border-b-4 border-gray-300 z-40">
      <palette-dropzone>
        <h-gate></h-gate>
      </palette-dropzone>
      <palette-dropzone>
        <x-gate></x-gate>
      </palette-dropzone>
      <palette-dropzone>
        <y-gate></y-gate>
      </palette-dropzone>
      <palette-dropzone>
        <z-gate></z-gate>
      </palette-dropzone>
      <palette-dropzone>
        <rx-gate></rx-gate>
      </palette-dropzone>
      <palette-dropzone>
        <ry-gate></ry-gate>
      </palette-dropzone>
      <palette-dropzone>
        <rz-gate></rz-gate>
      </palette-dropzone>
      <palette-dropzone>
        <control-gate></control-gate>
      </palette-dropzone>
    </div>

    <quantum-circuit data-hello-target="circuit"
                     class="inline-block mt-40 ml-8">
    </quantum-circuit>
  </circuit-editor>

  <textarea data-hello-target="log"
            class="fixed left-0 bottom-0 w-5/6 ml-8 mb-8 p-4 border-black border"
            cols="30"
            rows="6"
            readonly></textarea>
</div>
